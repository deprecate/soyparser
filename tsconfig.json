{
    "compilerOptions": {
        "declaration": true,
        "lib": ["es2016"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "outDir": "./lib",
        "strict": true,
        "target": "es6"
    },
    "include": [
        "./src/*.ts"
    ],
    "exclude": [
        "**/__tests__/*"
    ]
}
